<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.HomeFragment">

    <!-- Search Bar -->
    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:queryHint="Cari sesuatu..." />

    <!-- Informasi Admin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/orang"
            android:layout_marginEnd="16dp"
            android:contentDescription="Avatar Admin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Admin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat datang, semoga harimu menyenangkan!"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalScrollbarPosition="defaultPosition">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <!-- Nama dan Deskripsi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/amazonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MieRantau"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="38sp" />

                    <TextView
                        android:id="@+id/amazonDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop from A to Z"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/amazonImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/mierantau"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Row CardView -->
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <!-- Kelola Menu Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/KelolaMenuCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/KelolaMenuImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/miemangkok" />

                        <TextView
                            android:id="@+id/KelolaMenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menu"
                            android:textColor="@color/colorSecondaryDark"
                            android:textSize="18sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Penjualan Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/penjualanCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/penjualanImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/pngsit" />

                        <TextView
                            android:id="@+id/penjualanName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Penjualan"
                            android:textColor="@color/colorSecondaryDark"
                            android:textSize="18sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Users Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/riwayatCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/userImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/orang" />

                        <TextView
                            android:id="@+id/elecName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Riwayat"
                            android:textColor="@color/colorSecondaryDark"
                            android:textSize="18sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>